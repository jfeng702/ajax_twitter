<nav class="users-search">
  <form>
    <label for="user-search-input">Username</label>
    <input
      id="user-search-input"
      type="text"
      name="username"
      placeholder="Enter a username"
    >
  </form>
  <ul class="users">

  </ul>
</nav>

<ul>
  <% @users.each do |user| %>
    <li>
      <a href="<%= user_url(user) %>"><%= user.username %></a>
      <%= render 'follows/form', user: user %>
    </li>
  <% end %>
</ul>
